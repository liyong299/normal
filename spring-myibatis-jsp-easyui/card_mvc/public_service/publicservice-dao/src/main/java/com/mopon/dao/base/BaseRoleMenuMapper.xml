<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mopon.dao.base.BaseRoleMenuMapper" >
  <resultMap id="roleMenuResultMap" type="com.mopon.entity.BaseRoleMenu" >
    <result column="id" property="id" />
    <result column="roleid" property="roleId" />
    <result column="menuid" property="menuId" />
  </resultMap>
  
  <sql id="fieldList">
  	id,roleid,menuid
  </sql>
  <select id="queryList" parameterType="com.mopon.entity.BaseRoleMenu" resultMap="roleMenuResultMap">
  	select
  	<include refid="fieldList"></include>
  	from base_rolemenu
  	<where>
  		1 = 1
  		<if test="roleId!= null">
             and roleid = #{roleId}
        </if>
        <if test="menuId!= null">
             and menuid = #{menuId}
        </if>
  	</where>
  </select>
  
  <insert id="insert" parameterType="com.mopon.entity.BaseRoleMenu">
      INSERT INTO base_rolemenu
      (roleid,menuid)
    VALUES(#{roleId},#{menuId})
  </insert>
  
  <delete id="delete" parameterType="java.lang.String">
      DELETE FROM base_rolemenu
      WHERE roleid = #{roleId} and menuid = #{menuId}
  </delete>
</mapper>