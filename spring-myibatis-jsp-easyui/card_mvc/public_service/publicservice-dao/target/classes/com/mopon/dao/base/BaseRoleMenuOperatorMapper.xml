<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mopon.dao.base.BaseRoleMenuOperatorMapper" >
  <resultMap id="roleMenuOperatorResultMap" type="com.mopon.entity.BaseRoleMenuOperator" >
    <result column="id" property="id" />
    <result column="roleid" property="roleId" />
    <result column="menuid" property="menuId" />
    <result column="operatorId" property="operatorId" />
  </resultMap>
  
  <sql id="fieldList">
  	id,roleid,menuid,operatorid
  </sql>
  <select id="queryList" parameterType="com.mopon.entity.BaseRoleMenuOperator" resultMap="roleMenuOperatorResultMap">
  	select
  	<include refid="fieldList"></include>
  	from base_rolemenuoperator
  	<where>
  		1 = 1
  		<if test="roleId!= null">
             and roleid = #{roleId}
        </if>
        <if test="menuId!= null">
             and menuid = #{menuId}
        </if>
  	</where>
  </select>
  
  <insert id="insert" parameterType="com.mopon.entity.BaseRoleMenuOperator">
      insert into base_rolemenuoperator
      (roleid,menuid,operatorid)
      values(#{roleId},#{menuId},#{operatorId})
  </insert>
  
  <delete id="delete" parameterType="java.lang.String">
      delete from base_rolemenuoperator
      where roleid = #{roleId} and menuid = #{menuId} and operatorid = #{operatorId}
  </delete>
</mapper>